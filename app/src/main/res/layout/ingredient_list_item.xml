<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/app_padding"
    android:id="@+id/ingredient_list_item_cl">
    <TextView
        android:id="@+id/ingredient_list_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Brown rice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/list_item_title_text_size"
        android:textColor="@color/text_color"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ingredient_measure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/measure"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_list_item_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/information_text_size"
        android:textColor="@color/text_color"/>
    <TextView
        android:id="@+id/ingredient_measure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Measure"
        android:paddingStart="@dimen/title_information_margin"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_list_item_tv"
        app:layout_constraintLeft_toRightOf="@+id/ingredient_measure_title"
        android:textSize="@dimen/information_text_size"
        android:textColor="@color/text_color"/>
    <TextView
        android:id="@+id/ingredient_quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_measure_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/information_text_size"
        android:textColor="@color/text_color"/>
    <TextView
        android:id="@+id/ingredient_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15"
        android:paddingStart="@dimen/title_information_margin"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_measure_title"
        app:layout_constraintLeft_toRightOf="@+id/ingredient_quantity_title"
        android:textSize="@dimen/information_text_size"
        android:textColor="@color/text_color"/>
</android.support.constraint.ConstraintLayout>